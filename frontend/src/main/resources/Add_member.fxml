<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.AddMemberController"
            prefHeight="250" prefWidth="400"
            style="-fx-background-color: #212121;">

    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="250">
            <children>
                <Label text="Pridaj člena do skupiny"
                       style="-fx-text-fill: white; -fx-font-size: 18px;"/>
                <ListView fx:id="usersList" prefHeight="150" prefWidth="300"/>
                <Label fx:id="errorLabel" textFill="red" visible="false"/>
                <HBox spacing="10">
                    <Button text="Pridať" onAction="#handleAdd"/>
                    <Button text="Zrušiť" onAction="#handleCancel"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
