<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.NotificationsController"
            prefHeight="300" prefWidth="400"
            style="-fx-background-color: #212121;">
    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">
            <children>
                <Label text="Notifikácie"
                       style="-fx-text-fill: #0598ff; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <ListView fx:id="listView" prefHeight="200" prefWidth="360"
                          style="-fx-background-color: #2b2b2b; -fx-text-fill: white;"/>
                <HBox spacing="10">
                    <Button text="Označiť ako prečítané" onAction="#markRead"/>
                    <Button text="Zavrieť" onAction="#closeWindow"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
