<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controller.StatsController"
            prefWidth="800" prefHeight="500"
            style="-fx-background-color: #1e1e1e;">

    <children>

        <VBox layoutX="200" layoutY="40" spacing="20" alignment="CENTER"
              prefWidth="400">

            <Label text="Štatistiky úloh"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <ComboBox fx:id="groupSelector"
                      prefWidth="300"
                      promptText="Vyber skupinu"
                      style="-fx-background-color: #2b2b2b; -fx-text-fill: white;"/>

            <PieChart fx:id="taskChart"
                      prefWidth="350" prefHeight="250"
                      style="-fx-text-fill: white;"/>

            <VBox spacing="10" alignment="CENTER">
                <Label fx:id="totalLabel" text="Spolu: 0"
                       style="-fx-text-fill: white;"/>
                <Label fx:id="openLabel" text="Otvorené: 0"
                       style="-fx-text-fill: white;"/>
                <Label fx:id="inProgressLabel" text="Rozpracované: 0"
                       style="-fx-text-fill: white;"/>
                <Label fx:id="doneLabel" text="Dokončené: 0"
                       style="-fx-text-fill: white;"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
