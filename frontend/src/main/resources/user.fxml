<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.UserController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #212121;">

    <children>
        <VBox alignment="CENTER" spacing="20"
              prefWidth="800" prefHeight="600"
              style="-fx-padding: 40;">

            <!-- Údaje používateľa -->
            <Label fx:id="userNameLabel"
                   style="-fx-text-fill: #0598ff; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label fx:id="userIdLabel"
                   style="-fx-text-fill: #fafafa; -fx-font-size: 18px;" />
            <Label fx:id="userEmailLabel"
                   style="-fx-text-fill: #fafafa; -fx-font-size: 18px;" />

            <!-- Sekcia na zmenu hesla -->
            <Label text="Zmena hesla"
                   style="-fx-text-fill: #0598ff; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <PasswordField fx:id="newPasswordField" promptText="Nové heslo"
                           maxWidth="250"
                           style="-fx-background-color: #2b2b2b; -fx-text-fill: white;" />
            <PasswordField fx:id="confirmPasswordField" promptText="Potvrdenie hesla"
                           maxWidth="250"
                           style="-fx-background-color: #2b2b2b; -fx-text-fill: white;" />
            <Button text="Uložiť heslo" onAction="#handlePasswordChange"
                    maxWidth="200"
                    style="-fx-background-color: #0598ff; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Label fx:id="passwordErrorLabel" textFill="RED" visible="false"/>

            <!-- Sekcia na zmenu emailu -->
            <Label text="Zmena emailu"
                   style="-fx-text-fill: #0598ff; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField fx:id="newEmailField" promptText="Nový email"
                       maxWidth="250"
                       style="-fx-background-color: #2b2b2b; -fx-text-fill: white;" />
            <TextField fx:id="confirmEmailField" promptText="Potvrdenie emailu"
                       maxWidth="250"
                       style="-fx-background-color: #2b2b2b; -fx-text-fill: white;" />
            <Button text="Uložiť email" onAction="#handleEmailChange"
                    maxWidth="200"
                    style="-fx-background-color: #0598ff; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Label fx:id="emailErrorLabel" textFill="RED" visible="false"/>

        </VBox>
    </children>
</AnchorPane>
